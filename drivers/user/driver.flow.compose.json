{
  "triggers": [
    {
      "id": "user-new-todo",
      "title": {
        "en": "there is a new todo",
        "nl": "er is een nieuwe todo"
      },
      "tokens": [
        {
          "type": "number",
          "name": "id",
          "title": {
            "en": "id",
            "nl": "id"
          },
          "example": {
            "en": "24517568",
            "nl": "54681265"
          }
        },
        {
          "type": "string",
          "name": "project",
          "title": {
            "en": "project",
            "nl": "project"
          },
          "example": {
            "en": "The ultimate database",
            "nl": "De ultieme database"
          }
        },
        {
          "type": "string",
          "name": "action",
          "title": {
            "en": "action",
            "nl": "actie"
          },
          "example": {
            "en": "mentioned",
            "nl": "genoemd"
          }
        },
        {
          "type": "string",
          "name": "type",
          "title": {
            "en": "type",
            "nl": "soort"
          },
          "example": {
            "en": "Issue",
            "nl": "Issue"
          }
        },
        {
          "type": "string",
          "name": "title",
          "title": {
            "en": "title",
            "nl": "titel"
          },
          "example": {
            "en": "Yesterday all the printers went bezerk. Can you figure out what on earth had happened.",
            "nl": "Gisteren kregen gebruikers zaken op hun scherm die ze niet normaal vinden"
          }
        },
        {
          "type": "string",
          "name": "author",
          "title": {
            "en": "author",
            "nl": "auteur"
          },
          "example": {
            "en": "Christopher Oliver Worker",
            "nl": "Mark Ewald de Werker"
          }
        },
        {
          "type": "string",
          "name": "body",
          "title": {
            "en": "body",
            "nl": "inhoud"
          },
          "example": {
            "en": "Please fix this bug",
            "nl": "Svp snel herstellen"
          }
        },
        {
          "type": "string",
          "name": "link",
          "title": {
            "en": "link",
            "nl": "link"
          },
          "example": {
            "en": "https://gitlab.com/ .. etc",
            "nl": "https://gitlab.com/ .. etc"
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "set-user-nofification-level",
      "title": {
        "en": "set global email notification level",
        "nl": "schakel e-mail-notificatie niveau"
      },
      "titleFormatted": {
        "en": "mark global email notification level as #[[level]]",
        "nl": "schakel e-mail notificatie niveau naar #[[level]]"
      },
      "args": [
        {
          "type": "dropdown",
          "name": "level",
          "placeholder": {
            "en": "watch",
            "nl": "participeer"
          },
          "values": [
            {
              "id": "disabled",
              "label": {
                "en": "disabled",
                "nl": "inactief"
              }
            },
            {
              "id": "mention",
              "label": {
                "en": "mention",
                "nl": "als aangesproken"
              }
            },
            {
              "id": "watch",
              "label": {
                "en": "watch",
                "nl": "bewaak"
              }
            },
            {
              "id": "participating",
              "label": {
                "en": "participating",
                "nl": "participeer"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "user-mark-done",
      "title": {
        "en": "mark todo as done",
        "nl": "markeer todo als gereed"
      },
      "titleFormatted": {
        "en": "mark todo #[[id]] as done",
        "nl": "markeer todo #[[id]] als gereed"
      },
      "args": [
        {
          "type": "number",
          "name": "id",
          "placeholder": {
            "en": "123546",
            "nl": "123546"
          },
          "min": 1,
          "step": 1
        }
      ]
    },
    {
      "id": "user-mark-all-done",
      "title": {
        "en": "mark all todos as done",
        "nl": "markeer alle todo's als gereed"
      }
    },
    {
      "id": "enable-user-poller",
      "title": {
        "en": "enable polling for events",
        "nl": "schakel het monitoren van gebeurtenissen aan"
      }
    },
    {
      "id": "disable-user-poller",
      "title": {
        "en": "disable polling for events",
        "nl": "schakel het monitoren van gebeurtenissen uit"
      }
    },
    {
      "id": "user-set-status",
      "title": {
        "en": "set personal status",
        "nl": "pas peroonlijke status aan"
      },
      "titleFormatted": {
        "en": "set personal status to [[message]]. [[clear]] clear status",
        "nl": "pas persoonlijke status aan naar [[message]]. Verwijder status [[clear]]"
      },
      "args": [
        {
          "type": "text",
          "name": "message",
          "placeholder": {
            "en": "Very busy, do not disturb",
            "nl": "Zin in koffie"
          }
        },
        {
          "type": "dropdown",
          "name": "clear",
          "values": [
            {
              "id": "no",
              "label": {
                "en": "Do not",
                "nl": "niet"
              }
            },
            {
              "id": "30-minutes",
              "label": {
                "en": "After 30 minutes",
                "nl": "na 30 minuten"
              }
            },
            {
              "id": "3-hours",
              "label": {
                "en": "After 3 hours",
                "nl": "na 3 uur"
              }
            },
            {
              "id": "8-hours",
              "label": {
                "en": "After 8 hours",
                "nl": "na 8 uur"
              }
            },
            {
              "id": "1-day",
              "label": {
                "en": "After 1 day",
                "nl": "na 1 dag"
              }
            },
            {
              "id": "3-days",
              "label": {
                "en": "After 3 days",
                "nl": "na 3 dagen"
              }
            },
            {
              "id": "7-days",
              "label": {
                "en": "After 7 days",
                "nl": "na 7 dagen"
              }
            },
            {
              "id": "30-days",
              "label": {
                "en": "After 30 days",
                "nl": "na 30 dagen"
              }
            }
          ]
        }
      ]
    }
  ]
}