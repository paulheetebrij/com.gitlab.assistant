{
  "actions": [
    {
      "id": "group-create-issue",
      "title": {
        "en": "create issue",
        "nl": "maak issue aan"
      },
      "titleFormatted": {
        "en": "create an issue: [[title]]",
        "nl": "maak een issue aan: [[title]]"
      },
      "args": [
        {
          "type": "text",
          "name": "title",
          "placeholder": {
            "en": "title",
            "nl": "titel"
          }
        }
      ]
    }
  ],
  "triggers": [
    {
      "id": "group-my-issue-created",
      "title": {
        "en": "I have created a new issue",
        "nl": "ik heb een nieuw issue ingebracht"
      },
      "tokens": [
        {
          "type": "number",
          "name": "iid",
          "title": {
            "en": "Issue id",
            "nl": "Issue id"
          },
          "example": {
            "en": "12",
            "nl": "12"
          }
        },
        {
          "type": "string",
          "name": "title",
          "title": {
            "en": "title",
            "nl": "titel"
          },
          "example": {
            "en": "Removed all smelly code",
            "nl": "Alle puntkomma's verwijderd"
          }
        },
        {
          "type": "string",
          "name": "created",
          "title": {
            "en": "Created",
            "nl": "Ontstaan"
          },
          "example": {
            "en": "2021-06-26T05:39:32.471Z",
            "nl": "2021-06-26T05:39:32.471Z"
          }
        },
        {
          "type": "string",
          "name": "url",
          "title": {
            "en": "url",
            "nl": "link"
          },
          "example": {
